      }}
      <!--}-->

      <!-- Battery mount and battery {-->
      {{ generic.visual_mesh_macro(
        name = 'battery_mount',
        mesh_file = battery_mount_mesh,
        mesh_scale = mesh_scale_milimeters,
        color = 'DarkGrey',
        x = 0,
        y = 0,
        z = -body_height / 2 - 0.028,
        roll = 0,
        pitch = 0,
