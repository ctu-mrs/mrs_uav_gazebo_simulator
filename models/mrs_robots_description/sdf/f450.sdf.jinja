    </link>

    {# ================================================================== #}
    {# ||                 optional sensor definitions                  || #}
    {# ================================================================== #}

    {# Garmin down {--> #}
    {{ components.garmin_down_macro(
      parent_link = root,
      x = -0.057,
      y = 0,
      z = -0.069,
      roll = 0,
      pitch = math.radians(90),
      yaw = 0,
      mount = garmin_down_mount,
      spawner_args = spawner_args)
