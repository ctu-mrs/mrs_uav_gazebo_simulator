          name = 'realsense_down_mount',
          mesh_file = realsense_front_down_mount_mesh,
          mesh_scale = mesh_scale_milimeters,
          color = 'DarkGrey',
          x = 0.153,
          y = 0,
          z = -0.089,
          roll = 0,
          pitch = 0,
          yaw = 0,
          parent_link = root)
        }}
