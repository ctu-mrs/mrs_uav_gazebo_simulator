#!/bin/sh
#
# @name Gazebo x500
#
# @type Quadrotor
#

. ${R}etc/init.d/rc.mc_defaults

PX4_SIMULATOR=${PX4_SIMULATOR:=gz}
PX4_GZ_WORLD=${PX4_GZ_WORLD:=default}

param set-default SIM_GZ_EN 1

param set-default MAV_TYPE 2

param set-default CA_AIRFRAME 0
param set-default CA_ROTOR_COUNT 4

param set-default BAT1_N_CELLS 4
param set-default BAT1_CAPACITY 6800
param set-default BAT1_V_EMPTY 3.6
param set-default BAT1_V_CHARGED 4.2

# NOTES:

# The CA_ROTOR* parameters replaced the PX4 mixers
# It is now simpler to configure new models, but keep in mind these points:

## 1) CA_ROTOR*_P* params use the FRD coordinates (X+ is in front of the center of mass (CoM), Y+ is right of CoM, Z+ is below CoM)
## The index order does NOT match the jinja model

## 2) CA_ROTOR*_CT is thrust output scaling - multiplier of the output SIGNAL
## It is NOT the motor constant from the jinja model

## 3) CA_ROTOR*_KM is the moment ratio between roll/pitch and yaw
## It should match the moment constant from the jinja model

param set-default CA_ROTOR0_PX 0.1812
param set-default CA_ROTOR0_PY 0.1812
param set-default CA_ROTOR0_PZ -0.057
param set-default CA_ROTOR0_CT 1.0
param set-default CA_ROTOR0_KM 0.06

param set-default CA_ROTOR1_PX -0.1812
param set-default CA_ROTOR1_PY -0.1812
param set-default CA_ROTOR1_PZ -0.057
param set-default CA_ROTOR1_CT 1.0
param set-default CA_ROTOR1_KM 0.06

param set-default CA_ROTOR2_PX 0.1812
param set-default CA_ROTOR2_PY -0.1812
param set-default CA_ROTOR2_PZ -0.057
param set-default CA_ROTOR2_CT 1.0
param set-default CA_ROTOR2_KM -0.06

param set-default CA_ROTOR3_PX -0.1812
param set-default CA_ROTOR3_PY 0.1812
param set-default CA_ROTOR3_PZ -0.057
param set-default CA_ROTOR3_CT 1.0
param set-default CA_ROTOR3_KM -0.06

param set-default SIM_GZ_EC_FUNC1 101
param set-default SIM_GZ_EC_FUNC2 102
param set-default SIM_GZ_EC_FUNC3 103
param set-default SIM_GZ_EC_FUNC4 104

param set-default SIM_GZ_EC_MIN1 150
param set-default SIM_GZ_EC_MIN2 150
param set-default SIM_GZ_EC_MIN3 150
param set-default SIM_GZ_EC_MIN4 150

param set-default SIM_GZ_EC_MAX1 1000
param set-default SIM_GZ_EC_MAX2 1000
param set-default SIM_GZ_EC_MAX3 1000
param set-default SIM_GZ_EC_MAX4 1000

param set-default MPC_THR_HOVER 0.47
